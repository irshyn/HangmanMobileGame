<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/ic_splashscreen</item>
        <item name="android:windowBackground">@color/colorLightGolden</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style applied to letters in the word to guess. -->
    <style name="WordLettersStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style applied to headers  -->
    <style name="HeaderStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RecordStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:fontFamily">@font/adamina</item>
    </style>

</resources>